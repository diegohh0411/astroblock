---
interface Props {
    name: string,
    class?: string,
}

const { name, class: className = '' } = Astro.props;
const commonClasses = `icon size-6 cursor-pointer`;
---
<astroblock-icon class={`flex items-center justify-center size-8 rounded ${className}`}>
    {
        name === 'chevron-right' &&
        <svg class={commonClasses} xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="m8.25 4.5 7.5 7.5-7.5 7.5" />
        </svg>
    }
</astroblock-icon>

<script>
    class AstroblockIcon extends HTMLElement {

    }

    customElements.define('astroblock-icon', AstroblockIcon);
</script>
